extends layout

block content
  h1= title
  
  ul
    each author in author_list
      li 
        a(href=author.url) #{author.name} 
        if author.date_of_death
          | (#{author.formatted_birth} - #{author.formatted_death})
        else if (author.date_of_birth)
          | (#{author.formatted_birth})
        else
          |

    else
      li There are no authors.